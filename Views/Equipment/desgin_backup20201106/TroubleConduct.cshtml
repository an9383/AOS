        // 전송 데이터 객체 생성
        var objData = {};
        var objDatas = [];

        var objRows = gridObj.getVisibleRows();
        var objRow;
        for (var index in objRows) {
            objRow = objRows[index].data;
            objData = {
                "row_status": "I"
