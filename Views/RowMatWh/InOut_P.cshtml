                            .Name("SelectedRowsSummary")
                            .Column("receipt_phantom_qty")
                                    .ShowInColumn("receipt_phantom_qty")
                                    .ValueFormat("#,##0")
                                    .SummaryType(SummaryType.Sum)
                                    .DisplayFormat("[{0}]");
                            /* 재고량 */
                            items.Add()
                            .Name("SelectedRowsSummary")
                            .Column("receipt_remain_qty")
                                    .ShowInColumn("receipt_remain_qty")
                                    .ValueFormat("#,##0")
                                    .SummaryType(SummaryType.Sum)
                                    .DisplayFormat("[{0}]");
                        }))
