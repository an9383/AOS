                    .Name("SelectedRowsSummary")
                    .Column("receipt_qty")
                            .ShowInColumn("receipt_qty")
                            .ValueFormat("#,##0")
                            .SummaryType(SummaryType.Sum)
                            .DisplayFormat("[{0}]");
                    /* 기타입고량 */
