                        c.Add().DataField("item_cd").Caption("자재코드");
                        c.Add().DataField("item_nm").Caption("자재명");
                        c.Add().DataField("receipt_pack_unit").Caption("팩단위").Alignment(HorizontalAlignment.Center);
                    })
