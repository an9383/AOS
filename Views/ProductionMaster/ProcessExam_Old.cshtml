                                {
                                    <option value="@row["keyfield"]">@row["displayfield"]</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="input-wrapper">
                        <label class="col-3">순번</label>
                        <div class="input-group col-3">
                            <input type="number" class="form-control" name="ce_item_seq">
                        </div>
