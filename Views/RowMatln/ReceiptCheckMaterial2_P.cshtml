        } else {
            RCMP_purchase_order_seq_seq = _ReceiptCheckMaterial2_PData.receipt_check_rpt_id;
            $("#ReceiptCheckMaterial2_P input[name=receipt_check_no]").val(_ReceiptCheckMaterial2_PData.receipt_check_rpt_no);
        }

        $("#ReceiptCheckMaterial2_P input[name=purchase_order_seq]").val(_ReceiptCheckMaterial2_PData.purchase_order_seq);            //발주순서

        $("#ReceiptCheckMaterial2_P input[name=purchase_order_no]").val(_ReceiptCheckMaterial2_PData.purchase_order_no);                //발주번호
        $("#ReceiptCheckMaterial2_P input[name=item_cd]").val(_ReceiptCheckMaterial2_PData.item_cd);                                    //원자재코드
        $("#ReceiptCheckMaterial2_P input[name=item_nm]").val(_ReceiptCheckMaterial2_PData.item_nm);                                    //원자재명
        $("#ReceiptCheckMaterial2_P input[name=cust_cd]").val(_ReceiptCheckMaterial2_PData.cust_cd);                                    //거래처코드
        $("#ReceiptCheckMaterial2_P input[name=cust_nm]").val(_ReceiptCheckMaterial2_PData.cust_nm);                                    //거래처명
        $("#ReceiptCheckMaterial2_P input[name=purchase_order_qty]").val(_ReceiptCheckMaterial2_PData.purchase_order_qty);              //발주수량
        $("#ReceiptCheckMaterial2_P input[name=purchase_order_unit]").val(_ReceiptCheckMaterial2_PData.purchase_order_unit);            //발주단위
        $("#ReceiptCheckMaterial2_P input[name=possible_qty]").val(_ReceiptCheckMaterial2_PData.possible_qty);                          //입고가능수량

        $("#ReceiptCheckMaterial2_P select[name=purchase_status]").val(_ReceiptCheckMaterial2_PData.purchase_status);                    //입고구분
        $("#ReceiptCheckMaterial2_P select[name=receipt_check_state]").val(_ReceiptCheckMaterial2_PData.receipt_check_state);            //검수결과
        $("#ReceiptCheckMaterial2_P input[name=receipt_check_date]").val(_ReceiptCheckMaterial2_PData.receipt_check_rpt_dt);            //검수일자
        $("#ReceiptCheckMaterial2_P input[name=receipt_check_pack_form]").val(_ReceiptCheckMaterial2_PData.pack_form);                  //포장수량
        $("#ReceiptCheckMaterial2_P input[name=receipt_check_qty]").val(_ReceiptCheckMaterial2_PData.receipt_check_rpt_qty);            //검수수량
        $("#ReceiptCheckMaterial2_P input[name=receipt_check_unit_wt]").val(_ReceiptCheckMaterial2_PData.receipt_check_rpt_net_qty);    //표시된중량
        $("#ReceiptCheckMaterial2_P input[name=worker_cd]").val(_ReceiptCheckMaterial2_PData.worker_emp_cd);                            //점검자코드
        $("#ReceiptCheckMaterial2_P input[name=worker_nm]").val(_ReceiptCheckMaterial2_PData.worker_emp_nm);                            //점검자명
        $("#ReceiptCheckMaterial2_P input[name=checker_cd]").val(_ReceiptCheckMaterial2_PData.checker_emp_cd);                          //확인자코드
        $("#ReceiptCheckMaterial2_P input[name=checker_nm]").val(_ReceiptCheckMaterial2_PData.checker_emp_nm);                          //확인자명
        $("#ReceiptCheckMaterial2_P input[name=remark]").val(_ReceiptCheckMaterial2_PData.receipt_check_remark);                        //비고

