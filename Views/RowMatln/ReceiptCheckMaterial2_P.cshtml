        //#region 입력상태일 때 재조회
        function ReceiptCheckMaterial2_PGridSearch() {

            var formData = new FormData($("#ReceiptCheckMaterial2_P_Up_form")[0]);

            // 초기화
            $("#ReceiptCheckMaterial2_P_Up_form")[0].reset();
            $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("instance").option("dataSource", []);

            $.ajax({
                type: 'POST',
                url: '/RowMatln/ReceiptCheckMaterial2_P_Search',
                data: formData,
                contentType: false,
                processData: false,
                success: function (result) {

                    // 검색 결과가 없을 경우
                    if (result.length <= 0) {
                        $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("instance").option("dataSource", []);

                        return;
                    }

                    var json = JSON.parse(result);

                    if (json.hasOwnProperty('sessionLoss')) {
                        alert("세션이 만료되었습니다.");
                        sessionStorage.clear();
                        location.replace("/Comm/Login");
                    }

                    // 상단 폼 데이터 셋팅
                    var _ReceiptCheckMaterial2_PData = JSON.parse(@ReceiptCheckMaterial2_PData)[0];
                    if (RCMP_Gubun == "I") {
                        RCMP_purchase_order_seq_seq = $("#ReceiptCheck2_P_DownRightGrid").dxDataGrid("instance").totalCount() + 1;

                        var purchase_order_seq = RCM_P_leadingZeros(_ReceiptCheckMaterial2_PData.purchase_order_seq, 2);

                        var receipt_check_seq = RCM_P_leadingZeros(RCMP_purchase_order_seq_seq, 2);

                        var _receipt_check_no = _ReceiptCheckMaterial2_PData.purchase_order_no + purchase_order_seq + receipt_check_seq;

                        $("#ReceiptCheckMaterial2_P input[name=receipt_check_no]").val(_receipt_check_no);               // 검수번호
                    } else {
                        $("#ReceiptCheckMaterial2_P input[name=receipt_check_no]").val(_ReceiptCheckMaterial2_PData.receipt_check_rpt_no);
                    }

                    $("#ReceiptCheckMaterial2_P input[name=purchase_order_seq]").val(_ReceiptCheckMaterial2_PData.purchase_order_seq);

                    $("#ReceiptCheckMaterial2_P input[name=purchase_order_no]").val(_ReceiptCheckMaterial2_PData.purchase_order_no);                //발주번호
