        var popup = $("#RCMP_CheckerPopup").dxPopup("instance");

        popup.show();
    }

    // 확인자 더블클릭
    function RCMP_CheckerRowDblClick(selectedItems) {

        var data = selectedItems.data;

        $("#ReceiptCheckMaterial2_P input[name=checker_cd]").val(data.emp_cd);
