    // 수정(입력)중인지 체크
    function ReceiptCheckMaterial2_P_EditCheck(nowEdit) {

        // 수정중일 때
        if (nowEdit) {
            $("#ReceiptCheckMaterial2_PSave").dxButton().parent().parent().removeClass("display-none");
            $("#ReceiptCheckMaterial2_PUndo").dxButton().parent().parent().removeClass("display-none");
            $("#ReceiptCheckMaterial2_PInput").dxButton().parent().parent().addClass("display-none");
            $("#ReceiptCheckMaterial2_PEdit").dxButton().parent().parent().addClass("display-none");
            $("#ReceiptCheckMaterial2_PDelete").dxButton().parent().parent().addClass("display-none");

            $("#ReceiptCheckMaterial2_P_Up_form :disabled").attr('disabled', false);
        }
        if (!nowEdit) {
            $("#ReceiptCheckMaterial2_PSave").dxButton().parent().parent().addClass("display-none");
            $("#ReceiptCheckMaterial2_PUndo").dxButton().parent().parent().addClass("display-none");
            $("#ReceiptCheckMaterial2_PInput").dxButton().parent().parent().removeClass("display-none");

            //상태값에 따라 툴바 영역 차이
            if (RCMP_Gubun == "I") {
                $("#ReceiptCheckMaterial2_PInput").dxButton().parent().parent().removeClass("display-none");
                $("#ReceiptCheckMaterial2_PEdit").dxButton().parent().parent().addClass("display-none");
                $("#ReceiptCheckMaterial2_PDelete").dxButton().parent().parent().addClass("display-none");
            } else if (RCMP_Gubun == "U") {
                $("#ReceiptCheckMaterial2_PEdit").dxButton().parent().parent().removeClass("display-none");
                $("#ReceiptCheckMaterial2_PDelete").dxButton().parent().parent().removeClass("display-none");
                $("#ReceiptCheckMaterial2_PInput").dxButton().parent().parent().addClass("display-none");
            } else if (RCMP_Gubun == "D") {
                $("#ReceiptCheckMaterial2_PDelete").dxButton().parent().parent().removeClass("display-none");
                $("#ReceiptCheckMaterial2_PInput").dxButton().parent().parent().addClass("display-none");
                $("#ReceiptCheckMaterial2_PEdit").dxButton().parent().parent().addClass("display-none");
            }

            $("#ReceiptCheckMaterial2_P_Up_form :enabled").attr('disabled', true);

        }
    }

    /* CRUD */

    // 입력
    function ReceiptCheckMaterial2_PInput() {

        ReceiptCheckMaterial2_P_EditCheck(true);

        //점검자 수정 가능
        $("#RCMP_worker_cd_btn").attr('disabled', false);

        // 에디트 모드로 옵션 변경
        var editing = {
            allowUpdating: true,
            mode: 'batch'
        }

        $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("option", "editing", editing);

    }

    //수정
    function ReceiptCheckMaterial2_PEdit() {

        ReceiptCheckMaterial2_P_EditCheck(true);

        //검수번호 수정 불가능
        $("#ReceiptCheckMaterial2_P_Up_form input[name=receipt_check_no]").attr('disabled', true);
        //점검자 수정 불가능
        $("#RCMP_worker_cd_btn").attr('disabled', true);

        var editing = {
            allowUpdating: true,
            mode: 'batch'
        }

        $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("option", "editing", editing);
    }

    //삭제
    function ReceiptCheckMaterial2_PDelete() {
        RCMP_Gubun = "D";
        var receipt_check_no = $("#ReceiptCheckMaterial2_P input[name=receipt_check_no]").val();
        var purchase_order_no = $("#ReceiptCheckMaterial2_P_Up_form input[name=purchase_order_no]").val();      //발주번호
        var purchase_order_seq = $("#ReceiptCheckMaterial2_P_Up_form input[name=purchase_order_seq]").val();    //발주번호seq

        var formData = new FormData($("#ReceiptCheckMaterial2_P_Up_form")[0]);

        formData.set("gubun", RCMP_Gubun);
        formData.set("receipt_check_no", receipt_check_no);
        formData.set("purchase_order_no", purchase_order_no);
        formData.set("purchase_order_seq", purchase_order_seq);


        $.ajax({
            type: 'POST',
            url: '/RowMatln/ReceiptCheckMaterial2_TRX',
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {

                alert(JSON.parse(result).message);

                RCMP_Gubun = "";

                var popup = $("#ReceiptCheckMaterial2_PPopup").dxPopup("instance");
                popup.hide();

                ReceiptCheck2_PSearch();
            }
        })

    }

    // 취소
    function ReceiptCheckMaterial2_PUndo() {

        ReceiptCheckMaterial2_P_EditCheck(false);

        // 에디트 모드로 옵션 변경
        var editing = {
            allowUpdating: false
        }

        $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("option", "editing", editing);
        RCMP_purchase_order_seq_seq = "";
        if (RCMP_Gubun == "I") {
            ReceiptCheckMaterial2_PGridSearch();
        } else {
            ReceiptCheckMaterial2_P_EDGridSearch();
        }
    }

    //하단 Grid 체크결과 변경값 수정
    function RCMP_resultUpdate(info) {
        var data = info.data;

        data.purchase_order_no = $("#ReceiptCheckMaterial2_P_Up_form input[name=purchase_order_no]").val();
        data.receipt_check_no = $("#ReceiptCheckMaterial2_P_Up_form input[name=receipt_check_no]").val();
        data.purchase_order_seq = $("#ReceiptCheckMaterial2_P_Up_form input[name=purchase_order_seq]").val();

        RCMP_checkList.push(data);
    }

    //검수번호 중복 체크
    function overlap_check_no() {

        var receipt_check_no = $("#ReceiptCheckMaterial2_P_Up_form input[name=receipt_check_no]").val();

        $.ajax({
            type: 'POST',
            url: '/RowMatln/overlap_check_no',
            async: false,
            data: {
                receipt_check_no: receipt_check_no
            },
            success: function (result) {

                if (result.length <= 0) {
                    RCMP_overlap_check_no = true;
                } else {
                    RCMP_overlap_check_no = false;
                }
            }
        });
    }

    // 저장
    async function ReceiptCheckMaterial2_PSave() {

        //#region 검수번호 중복 체크
        if (RCMP_Gubun == "I") {
            overlap_check_no();
            if (!RCMP_overlap_check_no) {
                alert("검수번호가 중복되었습니다.\n검수번호를 수정하시오.");
                return;
            }
        }
        //#endregion

        RCMP_validationCheck();

        if (RCMP_validation_submit) {

            await $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("instance").saveEditData();

            var formData = new FormData($("#ReceiptCheckMaterial2_P_Up_form")[0]);
            var purchase_order_seq = $("#ReceiptCheckMaterial2_P_Up_form input[name=purchase_order_seq]").val();
            var receipt_check_no = $("#ReceiptCheckMaterial2_P input[name=receipt_check_no]").val();

            formData.set("gubun", RCMP_Gubun);
            formData.set("purchase_order_seq", purchase_order_seq);
            formData.set("receipt_check_no", receipt_check_no);
            formData.set("receipt_check_rpt_id", RCMP_purchase_order_seq_seq);

            $.ajax({
                type: 'POST',
                url: '/RowMatln/ReceiptCheckMaterial2_TRX',
                data: formData,
                contentType: false,
                processData: false,
                async: false,
                success: function (result) {

                    RCMP_validation_submit = false;

                    if (result.length <= 0) {
                        return;
                    }

                    var json = JSON.parse(result);

                    if (json.sessionLoss) {
                        alert("세션이 만료되었습니다.");
                        sessionStorage.clear();
                        location.replace("/Comm/Login");
                    }

                    ReceiptCheckMaterial2_P_CHK_Save(RCMP_checkList);

                }
            });

        }

    }

    function ReceiptCheckMaterial2_P_CHK_Save(data) {

        // 구분 값
        if (RCMP_Gubun == "I") {
            RCMP_Gubun = "ICHK";
        } else {
            RCMP_Gubun = "UCHK";
        }

        $.ajax({
            type: 'POST',
            url: '/RowMatln/ReceiptCheckMaterial2_batch',
            async: false,
            data: {
                receiptCheckMaterial2: JSON.stringify(data),
                gubun: RCMP_Gubun,
                receipt_check_rpt_id: RCMP_purchase_order_seq_seq
            },
            dataType: 'json',
            success: function (result) {

                if (result.length <= 0) {
                    return;
                }

                var json = JSON.parse(result);

                if (json.sessionLoss) {
                    alert("세션이 만료되었습니다.");
                    sessionStorage.clear();
                    location.replace("/Comm/Login");
                }

                alert("저장되었습니다.");
                RCMP_checkList = new Array();
                RCMP_purchase_order_seq_seq = "";

                ReceiptCheckMaterial2_P_EditCheck(false);

                var editing = {
                    allowUpdating: false,
                }

                $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("option", "editing", editing);

                RCMP_Gubun = "";

                var popup = $("#ReceiptCheckMaterial2_PPopup").dxPopup("instance");
                popup.hide();

                ReceiptCheck2_PSearch();
            }
        });

    }

    /* CRUD 끝 */

    // validation check
    function RCMP_validationCheck() {

        var datagrid = $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("instance");
        var gridData = datagrid.option("dataSource");

        if ($("#ReceiptCheckMaterial2_P select[name=receipt_check_state]").val() === "" || $("#ReceiptCheckMaterial2_P select[name=receipt_check_state]").val() === null
            || typeof $("#ReceiptCheckMaterial2_P select[name=receipt_check_state]").val() === "undefined") {
            alert('검수결과를 선택 해주세요.');
            return;
        }

        if ($("#ReceiptCheckMaterial2_P input[name=receipt_check_qty]").val() === "" || $("#ReceiptCheckMaterial2_P input[name=receipt_check_qty]").val() === null
            || $("#ReceiptCheckMaterial2_P input[name=receipt_check_qty]").val() <= 0 || typeof $("#ReceiptCheckMaterial2_P input[name=receipt_check_qty]").val() === "undefined") {
            alert('검수수량을 입력 해주세요.');
            return;
        }

        if ($("#ReceiptCheckMaterial2_P input[name=receipt_check_qty]").val() >= parseFloat($("#ReceiptCheckMaterial2_P input[name=possible_qty]").val().replace(",", ""))) {
            //alert("입고가능수량을 초과했습니다.");
            //return;
            if ($("#ReceiptCheckMaterial2_P select[name=purchase_status]").val() == "2") {
                if (confirm("입고가능수량보다 같거나 많습니다. 입고완료로 변경하시겠습니까?")) {
                    $("#ReceiptCheckMaterial2_P select[name=purchase_status]").val("3");
                }
            }
        }

        if ($("#ReceiptCheckMaterial2_P input[name=receipt_check_date]").val() === "" || $("#ReceiptCheckMaterial2_P input[name=receipt_check_date]").val() === null
            || typeof $("#ReceiptCheckMaterial2_P input[name=receipt_check_date]").val() === "undefined") {
            alert('검수일자를을 선택 해주세요.');
            return;
        }

        if ($("#ReceiptCheckMaterial2_P select[name=purchase_status]").val() === "" || $("#ReceiptCheckMaterial2_P select[name=purchase_status]").val() === null
            || typeof $("#ReceiptCheckMaterial2_P select[name=purchase_status]").val() === "undefined") {
            alert('입고구분을 선택 해주세요.');
            return;
        }

        if ($("#ReceiptCheckMaterial2_P input[name=worker_cd]").val() === "" || $("#ReceiptCheckMaterial2_P input[name=worker_cd]").val() === null
            || typeof $("#ReceiptCheckMaterial2_P input[name=worker_cd]").val() === "undefined") {
            alert('점검자를 선택 해주세요.');
            return;
        }

        // receipt_check_unit_wt
        if (isNaN($("#ReceiptCheckMaterial2_P input[name=receipt_check_unit_wt]").val())) {
            alert('표시된중량은 숫자만 기입 가능합니다.');
            return;
        }

        //체크결과 Grid validation
        var grid = $("#ReceiptCheckMaterial2_PGrid").dxDataGrid("instance");

        for (var i = 0; i < grid.totalCount(); i++) {
            if (grid.cellValue(i, "receipt_check_result") == null || grid.cellValue(i, "receipt_check_result") == "") {
                alert(grid.cellValue(i, "receipt_check_seq") + "번 체크결과를 입력해주시오.");
                return;
            }
        }

        RCMP_validation_submit = true;
    }

