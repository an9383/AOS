        //var workroom_cd = $("#Report_List_form input[name=workroom_cd]").val();

        //var index_cd = doc_cd + "-" + workroom_cd + "-" + time;
        var index_cd = doc_cd + "-" + time;

        //조합?
        return index_cd;
    }

